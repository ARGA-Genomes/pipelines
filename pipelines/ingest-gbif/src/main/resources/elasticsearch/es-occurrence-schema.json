{
  "record" : {
    "dynamic_templates": [
      {
        "verbatim": {
          "path_match": "verbatim.*",
          "mapping": {
            "type": "keyword",
            "copy_to": "all"
          }
        }
      },
      {
        "gbif_classification_rank": {
          "path_match": "gbifClassification.*.rank",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "gbif_classification_keys": {
          "path_match": "gbifClassification.classification.*Key",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "gbif_parsed_name_year": {
          "path_match": "gbifClassification.usageParsedName.*Authorship.year",
          "mapping": {
            "type": "keyword"
          }
        }
      }
    ],
    "properties": {

      "all": {"type": "text", "index" :  true, "store" :  false},

      "id": {"type": "keyword"},
      "gbifId": {"type": "long"},
      "lastCrawled": {"type": "date"},
      "created": {"type": "date"},

      "datasetKey": {"type": "keyword"},
      "datasetTitle": {"type": "keyword", "copy_to": "all"},
      "installationKey": {"type": "keyword"},
      "endorsingNodeKey": {"type": "keyword"},
      "publisherTitle": {"type": "keyword", "copy_to": "all"},
      "license": {"type": "keyword", "copy_to": "all"},
      "protocol": {"type": "keyword", "copy_to": "all"},
      "publishingCountry": {"type": "keyword", "copy_to": "all"},
      "datasetPublishingCountry": {"type": "keyword", "copy_to": "all"},
      "publishingOrganizationKey": {"type": "keyword"},

      "basisOfRecord": {"type": "keyword"},
      "sex": {"type": "keyword", "copy_to": "all"},
      "lifeStage": {"type":  "keyword", "copy_to": "all"},
      "establishmentMeans": {"type": "keyword", "copy_to": "all"},
      "individualCount": {"type": "integer"},
      "typeStatus": {"type": "keyword", "copy_to": "all"},
      "typifiedName": {"type": "keyword", "copy_to": "all"},
      "references": {"type":"text", "copy_to": "all"},
      "recordedBy": {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "recordNumber": {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "organismId": {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "samplingProtocol":  {"type": "keyword", "copy_to": "all"},
      "eventId":  {"type": "keyword", "copy_to": "all"},
      "parentEventId":  {"type": "keyword", "copy_to": "all"},
      "institutionCode":  {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "collectionCode":  {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "catalogNumber":  {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "occurrenceId":  {"type": "keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},

      "continent": {"type":"keyword", "copy_to": "all"},
      "waterBody": {"type":"keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "countryCode": {"type":"keyword", "copy_to": "all"},
      "country": {"type":"text", "copy_to": "all"},
      "stateProvince": {"type":"keyword", "fields": {"suggest": {"type": "completion", "analyzer": "simple", "preserve_separators": true, "preserve_position_increments": true, "max_input_length": 50}}, "copy_to": "all"},
      "minimumElevationInMeters": {"type":"double"},
      "maximumElevationInMeters": {"type":"double"},
      "minimumDepthInMeters": {"type":"double"},
      "maximumDepthInMeters": {"type":"double"},
      "minimumDistanceAboveSurfaceInMeters": {"type":"double"},
      "maximumDistanceAboveSurfaceInMeters": {"type":"double"},
      "coordinateUncertaintyInMeters": {"type":"double"},
      "coordinatePrecision": {"type":"double"},
      "coordinates": {"type": "geo_point"},
      "scoordinates": {"type": "geo_shape"},
      "decimalLatitude": {"type":"double"},
      "decimalLongitude": {"type":"double"},

      "year": {"type": "short"},
      "month": {"type": "short"},
      "day": {"type": "short"},
      "eventDate": {"type": "date_range", "format": "yyyy-MM-dd'T'HH:mm:ss||yyyy-MM-dd'T'HH:mm||yyyy-MM-dd||yyyy-MM||yyyy"},
      "startDayOfYear": {"type": "short"},
      "endDayOfYear": {"type": "short"},
      "modified": {"type": "date"},
      "dateIdentified": {"type": "date"},
      "eventDateSingle": {"type": "date"},

      "issues": {"type": "keyword"},
      "notIssues": {"type": "keyword"},

      "gbifClassification": {
        "type": "object",
        "properties": {
          "classification.name":  { "type": "text", "boost": 90, "copy_to": "all" },
          "classification.synonym": { "type": "boolean"  },
          "classificationPath": { "type": "keyword"  },
          "usage.name": { "type": "keyword", "boost": 100, "copy_to": "all"  },
          "acceptedUsage.name": { "type": "text", "boost": 100, "copy_to": "all" },
          "diagnostics.matchType": { "type": "keyword" },
          "diagnostics.status": { "type": "keyword" },
          "usageParsedName.state": { "type": "keyword" },
          "usageParsedName.type": { "type": "keyword" },
          "usageParsedName.notho": { "type": "keyword" }
        }
      },

      "mediaTypes": {"type":  "keyword", "copy_to": "all"},
      "multimediaItems": {"type": "nested", "enabled": false},

      "measurementOrFactItems": {"type": "nested", "enabled": false},
      "amplificationItems": {"type": "nested", "enabled": false},

      "australiaSpatialLayers":{"type": "nested"},

      "verbatim": {"type": "object", "enabled": false}
    }
  }
}
